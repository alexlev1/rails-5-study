
<div class="article">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <span><%= post.created_at.to_date.strftime("%d %B, %Y") %></span>
    <% if user_signed_in? %>
      |
      <%= link_to 'Изменить', edit_post_path(post) %>
      |
      <%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Вы уверены?' } %>
    <% end %>
    <p>
      <%= image_tag post.image.url(:large), class: 'img-show' if post.image? %>
      <%= post.summary %>
    </p>
    <div class="read-more">
      <%= link_to 'Читать дальше', post_path(post) %>
    </div>
    <div class="tags">
      <%= raw post.tags.map(&:name).map {|t| link_to t, tag_path(t), class: 'tag'}.join(' ') %>
    </div>
</div>
